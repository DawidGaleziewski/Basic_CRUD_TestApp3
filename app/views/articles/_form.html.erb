<% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
      <% end %>
    </ul>
 <% end %>

<%= form_for @article do |variable| %>
  <p>
    <%= variable.label :title %> </br>
    <%= variable.text_field :title %> </br>
  </p>
  <p>
    <%= variable.label :description %> </br>
    <%= variable.text_area :description %> </br>
  </p>
  <p>
    <%= variable.label :author %> </br>
    <%= variable.text_field :author %> </br>
  </p>
  <p>
    <%= variable.submit %> </br>
  </p>
<% end %>

